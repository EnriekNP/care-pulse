{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "jsxSingleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 80,
        "semi": true,
        "tabWidth": 2
      }
    ]
  }
}
